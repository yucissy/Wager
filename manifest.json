{
  "manifest_version": 2,

  "name": "Wager",
  "description": "This widget creates a Daily To-Do list and lets you bet on your day's productivity.",
  "version": "1.0",
  "background": {
    "scripts":["background.js"]
    },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "begin.html"
  },
  "icons": { "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png" },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}